// This is a high-scale full-stack nonprofit website with frontend (React) and backend (Node.js + Express + MongoDB)
// Pages: Home, Blog, Podcast, Store. Includes API routes and database integration.

// Frontend Structure: React + Tailwind CSS + React Router
// Backend Structure: Node.js + Express + MongoDB
// Store: Stripe for payment processing (mock integration for now)

// /frontend/src/App.jsx
import React from "react";
import { BrowserRouter as Router, Routes, Route } from "react-router-dom";
import HomePage from "./pages/Home";
import BlogPage from "./pages/Blog";
import PodcastPage from "./pages/Podcast";
import StorePage from "./pages/Store";
import NavbarComponent from "./components/Navbar";

function App() {
  return (
    <Router>
      <div className="min-h-screen bg-gray-50 text-gray-800">
        <NavbarComponent />
        <Routes>
          <Route path="/" element={<HomePage />} />
          <Route path="/blog" element={<BlogPage />} />
          <Route path="/podcast" element={<PodcastPage />} />
          <Route path="/store" element={<StorePage />} />
        </Routes>
      </div>
    </Router>
  );
}

export default App;

// /frontend/src/pages/Home.jsx
import React from "react";
const HomePage = () => {
  return <div className="p-6">Welcome to our Nonprofit Home Page!</div>;
};
export default HomePage;

